<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Image Gallery</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <!-- wrapper -->
    <div id="wrapper">
      <div class="container">
        <!-- navbar -->
        <div id="navbar" class="navbar">
          <div class="logo"><h1>My Gallery</h1></div>
          <div class="nav-items">
            <div><a class="anc" href="#Upload">Upload</a></div>
            <div><a class="anc"  href="#about">About</a></div>
            <div><a class="anc"  href="#footer">Reach Me</a></div>
          </div>
        </div>

        <!-- gallery -->

        <div id="gallery" class="gallery">
          <% images.forEach(function(image){%>
          <figure class="card">
            <img
              src="data:image/<%=image.image.contentType%>;base64,
            <%=image.image.data.toString('base64')%>"
            />
            <!-- <figcaption><%=image.title%></figcaption> -->
          </figure>
          <%})%>
        </div>

        <!-- upload -->

        <div id="Upload">
          <form action="/" method="POST" enctype="multipart/form-data">
            <label for="image" class="drop-container">
              <span class="drop-title">Drop files here</span>
              or
              <input type="file" id="image" name="image" required />
              <button type="submit" class="btn">Upload</button>
            </label>
          </form>
        </div>
      </div>
    <!-- about   -->
    <div id="about" class="container">
      <div class="heading">Hi!! Anshuman Kumar</div>
      <div class="description">I'm a full stack developer and i have created many projects.
        To know more about me please visit my portfolio.
      </div>
      <div class="btn-pink">Portfolio</div>
    </div>
    
    <!-- footer-section -->
    <footer id="footer">
      <div class="container">
        <div class="footer-wrapper">
          <div class="footer-faded-text">Anshuman Kumar</div>

          <div class="link-wrapper">
            <div>
              <a href="#navbar">Top</a>
            </div>
            <div>
              <a href="#gallery">Gallery</a>
            </div>
            <div>
              <a href="#Upload">Upload</a>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </div>
  </body>
</html>
